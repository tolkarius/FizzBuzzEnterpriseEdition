pipeline {

    agent any
    
    stages {
    
        stage("build") {
        
            steps {
                echo 'building the application...'
                
            }
        }
        
        stage("test") {
        
            steps {
                echo 'testing the application...'
            }
        }
        
        
        stage("coverage") {
        
            steps {
                echo 'bcreating reports...'
            }
        }
        
        stage("deploy") {
        
            steps {
                sh 'npm install'
                sh 'npm build'
            }
        }
    }
}
            
